#!/usr/bin/env groovy

node('ubuntu-tabris-2.4.0') {
    stage('info') {
        sh 'npm -version'
        sh 'node -v'
        sh 'tabris --version'
        sh 'uname -a'
        sh 'java -version'
    }
    stage('checkout') {
        if(isScmConfigured()) {
            def gitCommit = checkout(scm).GIT_COMMIT
            echo "commit: " + gitCommit
            echo "branch: " + env.BRANCH_NAME
            checkout([
                $class: 'GitSCM',
                branches: [[name: env.BRANCH_NAME]],
                userRemoteConfigs: scm.userRemoteConfigs
            ])
        } else {
            git 'https://github.com/eclipsesource/tabris-js-hello-world.git'
        }
    }
    stage('npm') {
        sh 'npm install'
    }
    stage('tabris build') {
        // sh 'echo ${TABRIS_BUILD_KEY}'
        sh 'tabris build android --debug --device'
    }
    stage('archive apk') {
        archive '**/*.apk'
    }
}

private boolean isScmConfigured() {
    // if the SCM is not configured, then the branch name is null
    return env.BRANCH_NAME;
}
