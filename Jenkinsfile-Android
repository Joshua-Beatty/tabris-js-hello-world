node {

    def androidBuildImage = docker.build("tabris-js-build-android")

    androidBuildImage.inside {
        stage('info') {
            sh 'npm -version'
            sh 'node -v'
            sh 'tabris --version'
            sh 'uname -a'
            sh 'java -version'
        }
        stage('checkout') {
            if(isScmConfigured()) {
                checkout scm
            } else {
                git 'https://github.com/eclipsesource/tabris-js-hello-world.git'
            }
        }
        stage('npm') {
            sh 'npm install'
        }
        stage('tabris build') {
            // sh 'echo ${TABRIS_BUILD_KEY}'
            sh 'tabris build android --debug --device'
        }
        stage('archive apk') {
            archive '**/*.apk'
        }
    }
}

private boolean isScmConfigured() {
    // if the SCM is not configured, then the branch name is null
    return env.BRANCH_NAME;
}
