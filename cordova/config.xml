<?xml version='1.0' encoding='utf-8'?>
<widget
  id="com.eclipsesource.hello.world"
  version="0.2.0"
  android-versionCode="$BUILD_NUMBER"
  ios-CFBundleVersion="$BUILD_NUMBER">
  <name>Hello World</name>
  <description>
    Example Tabris.js App
  </description>
  <author email="fwaibel@eclipsesource.com">
    Florian Waibel
  </author>

  <hook type="before_platform_add" src="scripts/replace-config-env-vars.js" />
  
  <edit-config file="*-Info.plist" target="NSPhotoLibraryUsageDescription" mode="overwrite">
    <string>App uses photo library to provide an example usage of it.</string>
  </edit-config>

  <platform name="ios">
    <!-- App Store -->
    <icon src="res/ios/planet-1024.png" width="1024" height="1024" />
    <!-- iOS 7.0+ -->
    <!-- iPad -->
    <icon src="res/ios/planet-76.png" width="76" height="76" />
    <icon src="res/ios/planet-76@2x.png" width="152" height="152" />
    <!-- iOS 6.1 -->
    <!-- iPad -->
    <icon src="res/ios/planet-72.png" width="72" height="72" />
    <icon src="res/ios/planet-72@2x.png" width="144" height="144" />
    <!-- iPad Spotlight and Settings Icon -->
    <icon src="res/ios/planet-small-50.png" width="50" height="50" />
    <icon src="res/ios/planet-small-50@2x.png" width="100" height="100" />
  </platform>
</widget>
